                                WidthRequest="64">
                                
                                <Image
                                        Source="{Binding ., Converter={glyphitem:GlyphCollectionItemConverter}}"
                                        HeightRequest="48"
                                        WidthRequest="48"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>

                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>-->
                    
                </CollectionView>
                
            
            </VerticalStackLayout>

        </ScrollView>
        <Button
            Text="Create Topic"
            Margin="10"
            Command="{Binding CreateTopicCommand}"/>
    </VerticalStackLayout>
</ContentPage>