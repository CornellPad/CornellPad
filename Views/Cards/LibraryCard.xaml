<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:model="clr-namespace:CornellPad.Models"
        x:DataType="model:LibraryModel"
        x:Class="CornellPad.Views.Cards.LibraryCard"
       
        Style="{DynamicResource LibraryCardBorder}">
    <Grid
        ColumnDefinitions="Auto, *">
            <Border
                Grid.Column="0"
                Style="{DynamicResource LibraryCardTitleBorder}">
                
                <Label
                    Text="{Binding Name}"
                    Style="{DynamicResource LibraryCardTitleLabel}"/>
                
            </Border>

        <Label
            Grid.Column="1"
            Text="{Binding CreatedDate, StringFormat='{0:M/dd/yyyy&#x0a;h:mm tt}'}"
            Style="{DynamicResource LibraryCardCreationDateLabel}">
            
            <!-- String formatting is more clear; however, it won't work with styles. Left for educational purposes -->
            <!--<Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding CreatedDate, StringFormat='{0:M/dd/yyyy}'}"/>
                    <Span Text="&#x0a;"/>
                    <Span Text="{Binding CreatedDate, StringFormat='{0:h:mm tt}'}" />
                </FormattedString>
            </Label.FormattedText>-->
            
        </Label>
    </Grid>
</Border>
